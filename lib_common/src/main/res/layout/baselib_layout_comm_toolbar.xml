<?xml version="1.0" encoding="utf-8"?>
<com.tdxtxt.baselib.view.titlebar.TitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_ffffff"
    app:leftColor="@color/black_333333"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    app:titleStyle="normal"
    app:leftIcon="@drawable/base_icon_arrow_back_black"
    app:leftTitle=""
    app:lineVisible="false"
    tools:title="标题"
    app:titleSize="18dp"
    app:rightSize="16dp"
    tools:rightTitle="菜单"
    tools:rightIcon="@drawable/msg_black"
    app:titleColor="@color/black_111111" />

