<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Defined base ratio size custom attrs -->
    <declare-styleable name="ViewSizeCalculate">
        <!-- Sets view ratio size of width -->
        <attr name="widthRatio" format="float"/>
        <!-- Sets view ratio size of height -->
        <attr name="heightRatio" format="float"/>
        <!-- Sets view ratio size of square -->
        <attr name="layoutSquare" format="boolean"/>
        <!-- Sets view ratio size of aspect -->
        <attr name="layoutAspectRatio" format="float"/>
        <!-- Sets view ratio size of mode -->
        <attr name="datumRatio">
            <enum name="datumAuto" value="0"/>
            <enum name="datumWidth" value="1"/>
            <enum name="datumHeight" value="2"/>
        </attr>
    </declare-styleable>

    <attr name="rRadius" format="dimension" />
    <attr name="rLeftRadius" format="dimension" />
    <attr name="rRightRadius" format="dimension" />
    <attr name="rTopRadius" format="dimension" />
    <attr name="rBottomRadius" format="dimension" />
    <attr name="rTopLeftRadius" format="dimension" />
    <attr name="rTopRightRadius" format="dimension" />
    <attr name="rBottomLeftRadius" format="dimension" />
    <attr name="rBottomRightRadius" format="dimension" />
    <attr name="rStrokeWidth" format="dimension" />
    <attr name="rStrokeColor" format="reference" />

    <declare-styleable name="RoundCorner">
        <attr name="rRadius" />
        <attr name="rLeftRadius" />
        <attr name="rRightRadius" />
        <attr name="rTopRadius" />
        <attr name="rBottomRadius" />
        <attr name="rTopLeftRadius" />
        <attr name="rTopRightRadius" />
        <attr name="rBottomLeftRadius" />
        <attr name="rBottomRightRadius" />
        <attr name="rStrokeWidth" />
        <attr name="rStrokeColor" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <!-- 整体样式 -->
        <attr name="barStyle">
            <enum name="light" value="0x10" />
            <enum name="night" value="0x20" />
            <enum name="transparent" value="0x30" />
            <enum name="ripple" value="0x40" />
        </attr>
        <!-- 中间 -->
        <attr name="title" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleGravity">
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
        <attr name="titleStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <!-- 左边 -->
        <attr name="leftTitle" format="string"/>
        <!-- leftIcon 优先于 backButton -->
        <attr name="leftIcon" format="reference" />
        <attr name="leftTint" format="color" />
        <!-- 返回按钮（默认开） -->
        <attr name="backButton" format="boolean" />
        <attr name="leftColor" format="color" />
        <attr name="leftSize" format="dimension" />
        <attr name="leftBackground" format="reference|color" />
        <!-- 右边 -->
        <attr name="rightTitle" format="string" />
        <attr name="rightIcon" format="reference" />
        <attr name="rightTint" format="color" />
        <attr name="rightColor" format="color" />
        <attr name="rightSize" format="dimension" />
        <attr name="rightBackground" format="reference|color" />
        <!-- 分割线 -->
        <attr name="lineVisible" format="boolean" />
        <attr name="lineColor" format="reference|color" />
        <attr name="lineSize" format="dimension" />
        <!-- 图标显示大小 -->
        <attr name="drawableSize" format="dimension" />
        <!-- 图标和文字的间距 -->
        <attr name="android:drawablePadding" />
        <!-- 控件水平内间距 -->
        <attr name="android:paddingVertical" />
        <!-- 控件垂直内间距（可用于调整标题栏自适应的高度） -->
        <attr name="android:paddingHorizontal" />
    </declare-styleable>

    <!-- StateLayout -->
    <declare-styleable name="StateLayout">
        <attr name="sl_loadingLayoutId" format="reference" />
        <attr name="sl_emptyLayoutId" format="reference" />
        <attr name="sl_errorLayoutId" format="reference" />
        <attr name="sl_emptyText" format="string" />
        <attr name="sl_emptyIcon" format="reference" />
        <attr name="sl_enableTouchWhenLoading" format="boolean" />
        <attr name="sl_defaultShowLoading" format="boolean" />
        <attr name="sl_noEmptyAndError" format="boolean" />
        <attr name="sl_showLoadingOnce" format="boolean" />
        <attr name="sl_animDuration" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundStyleTextView">
        <!--边框的宽度，默认为1dp-->
        <attr name="strokeWidth" format="dimension" />
        <!--圆角半径，默认为2dp-->
        <attr name="radius" format="dimension" />
        <attr name="leftRadius" format="dimension" />
        <attr name="rightRadius" format="dimension" />
        <attr name="topRadius" format="dimension" />
        <attr name="bottomRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <!--边框颜色，默认是没有边框即颜色为Color.TRANSPARENT-->
        <attr name="strokeColor" format="reference|color" />
        <!-- 背景颜色 -->
        <attr name="bgColor" format="reference|color" />
        <!-- 开始背景颜色 -->
        <attr name="startBgColor" format="reference|color" />
        <!-- 结束背景颜色 -->
        <attr name="endBgColor" format="reference|color" />
        <attr name="useEnableAlpha" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="XViewPager">
        <attr name="xvp_height_wrap" format="boolean" />
        <attr name="xvp_horizontal_scroll" format="boolean" />
    </declare-styleable>

    <declare-styleable name="DashLineView">
        <attr name="dlineWidth" format="dimension"/>
        <attr name="dlineColor" format="color"/>
        <attr name="dlineSpace" format="dimension"/>
        <attr name="dlineOrientation" format="enum">
            <enum name="VERTICAL" value="1"/>
            <enum name="HORIZONTAL" value="0"/>
        </attr>>
    </declare-styleable>
</resources>